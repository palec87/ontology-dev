<?xml version="1.0"?>
<rdf:RDF xmlns:org="http://www.w3.org/ns/org#"
         xmlns:foaf="http://xmlns.com/foaf/0.1/"
         xmlns:gr="http://purl.org/goodrelations/v1#"
         xmlns:prov="http://www.w3.org/ns/prov#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xmlns:time="http://www.w3.org/2006/time#"
         xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:skos="http://www.w3.org/2004/02/skos/core#"
         xmlns:vcard="http://www.w3.org/2006/vcard/ns#"
         xmlns:dct="http://purl.org/dc/terms/">

    <!-- Ontology Declaration -->
    <owl:Ontology rdf:about="http://example.org/ontology">
        <owl:versionIRI rdf:resource="http://example.org/ontology/1.0"/>
        <dct:title xml:lang="en">Scientific Institution Ontology</dct:title>
        <dct:description xml:lang="en">Ontology to describe organizational structure and scientific experiments conducted within scientific institutions</dct:description>
        <dct:creator>PSB</dct:creator>
        <dct:created rdf:datatype="http://www.w3.org/2001/XMLSchema#date">2025-10-15</dct:created>
        <dct:modified rdf:datatype="http://www.w3.org/2001/XMLSchema#date">2025-10-15</dct:modified>
        <owl:versionInfo>1.0</owl:versionInfo>
    </owl:Ontology>

    <!-- 
    ================================================================
    Annotation Properties
    ================================================================
    -->
    
    <owl:AnnotationProperty rdf:about="http://purl.org/dc/elements/1.1/creator"/>
    <owl:AnnotationProperty rdf:about="http://purl.org/dc/terms/created"/>
    <owl:AnnotationProperty rdf:about="http://purl.org/dc/terms/description"/>
    <owl:AnnotationProperty rdf:about="http://purl.org/dc/terms/modified"/>
    <owl:AnnotationProperty rdf:about="http://purl.org/dc/terms/title"/>

    <!-- 
    ================================================================
    Object Properties
    ================================================================
    -->

    <!-- Example Object Property -->
    <owl:ObjectProperty rdf:about="#hasRelationTo">
        <rdfs:label xml:lang="en">has relation to</rdfs:label>
        <rdfs:comment xml:lang="en">A general relation between two entities</rdfs:comment>
        <rdfs:domain rdf:resource="#Entity"/>
        <rdfs:range rdf:resource="#Entity"/>
    </owl:ObjectProperty>

    <!-- 
    ================================================================
    Data Properties
    ================================================================
    -->

    <!-- Example Data Property -->
    <owl:DatatypeProperty rdf:about="#hasName">
        <rdfs:label xml:lang="en">has name</rdfs:label>
        <rdfs:comment xml:lang="en">The name of an entity</rdfs:comment>
        <rdfs:domain rdf:resource="#Entity"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="#hasValue">
        <rdfs:label xml:lang="en">has value</rdfs:label>
        <rdfs:comment xml:lang="en">A numeric value associated with an entity</rdfs:comment>
        <rdfs:domain rdf:resource="#Entity"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#decimal"/>
    </owl:DatatypeProperty>

    <!-- 
    ================================================================
    Classes
    ================================================================
    -->

    <!-- Top-level Entity Class -->
    <owl:Class rdf:about="#Entity">
        <rdfs:label xml:lang="en">Entity</rdfs:label>
        <rdfs:comment xml:lang="en">The root class for all entities in this ontology</rdfs:comment>
    </owl:Class>

    <!-- Example Subclasses -->
    <owl:Class rdf:about="#Person">
        <rdfs:subClassOf rdf:resource="#Entity"/>
        <rdfs:label xml:lang="en">Person</rdfs:label>
        <rdfs:comment xml:lang="en">A human being</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="#Organization">
        <rdfs:subClassOf rdf:resource="#Entity"/>
        <rdfs:label xml:lang="en">Organization</rdfs:label>
        <rdfs:comment xml:lang="en">An organized group of people with a particular purpose</rdfs:comment>
    </owl:Class>

    <!-- 
    ================================================================
    Individuals (Instances)
    ================================================================
    -->

    <!-- Example Individual -->
    <owl:NamedIndividual rdf:about="#examplePerson">
        <rdf:type rdf:resource="#Person"/>
        <rdfs:label xml:lang="en">Example Person</rdfs:label>
        <hasName rdf:datatype="http://www.w3.org/2001/XMLSchema#string">John Doe</hasName>
    </owl:NamedIndividual>

    <!-- 
    ================================================================
    Class Restrictions and Complex Classes
    ================================================================
    -->

    <!-- Example: Person who works for an Organization -->
    <owl:Class rdf:about="#Employee">
        <rdfs:subClassOf rdf:resource="#Person"/>
        <rdfs:subClassOf>
            <owl:Restriction>
                <owl:onProperty rdf:resource="#worksFor"/>
                <owl:someValuesFrom rdf:resource="#Organization"/>
            </owl:Restriction>
        </rdfs:subClassOf>
        <rdfs:label xml:lang="en">Employee</rdfs:label>
        <rdfs:comment xml:lang="en">A person who works for an organization</rdfs:comment>
    </owl:Class>

    <!-- Object Property for employment relationship -->
    <owl:ObjectProperty rdf:about="#worksFor">
        <rdfs:label xml:lang="en">works for</rdfs:label>
        <rdfs:comment xml:lang="en">Indicates that a person is employed by an organization</rdfs:comment>
        <rdfs:domain rdf:resource="#Person"/>
        <rdfs:range rdf:resource="#Organization"/>
    </owl:ObjectProperty>

</rdf:RDF>